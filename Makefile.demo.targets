include Makefile.framework

demo-lib: src/demo/resource-picture.cpp
	mkdir -p obj/demo
	$(CC) $(CFLAGS) `pkg-config --cflags gdk-pixbuf-2.0 gtk+-2.0` -o obj/demo/resource-picture.o src/demo/resource-picture.cpp
	$(CC) $(CFLAGS) `pkg-config --cflags gdk-pixbuf-2.0 gtk+-2.0` -o obj/demo/game.o src/demo/game.cpp
	$(CC) -shared $(LDFLAGS) -o lib/libdemo.so obj/demo/resource-picture.o obj/demo/game.o `pkg-config --libs gdk-pixbuf-2.0 gtk+-2.0` -lcruftybehemoth

demo-res: src/demo/resources src/demo/test.png 
	mkdir -p bin
	cp src/demo/resources src/demo/test.png bin/
